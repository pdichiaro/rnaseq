config {
    // Minimal nf-test configuration
    testsDir "."
    workDir ".nf-test"
    
    // Use test profile for minimal resource usage
    profile "test"
    
    // Only essential triggers
    triggers 'nextflow.config', 'test.config'
    
    // Ignore non-essential test directories
    ignore 'modules/nf-core/**/tests/*', 'subworkflows/nf-core/**/tests/*'
}
